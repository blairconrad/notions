{
  "manifest_version" : 2,
  "name" : "Agfa JIRA",
  "version" : "0.1.0",

  "description" : "Adds custom actions to JIRA issue pages",

  "homepage_url": "https://github.com/blairconrad/notions/tree/master/ChromeExtensions/AgfaJira",

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["*://jiraprod.agfahealthcare.com/browse/IEI-*"],
      "js": ["content_script.js"]
    }
  ],

  "page_action": {
    "default_icon": {
      "16": "icon16.png"
    },
    "default_title": "AGFA JIRA",
    "default_popup": "popup.html"
  },

  "permissions": [
    "activeTab",
    "clipboardWrite",
    "declarativeContent"
  ]
}
